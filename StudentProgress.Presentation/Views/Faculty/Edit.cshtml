@using StudentProgress.BusinessLogic.Profiles.Dtos
@model FacultyDto

<form asp-action="Edit" method="post" enctype="multipart/form-data" >
    <input type="hidden" asp-for="Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="text-align:center">Edit Faculty</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="FacultyName">FacultyName</label>
            <input asp-for="FacultyName" class="form-control" placeholder="FacultyName">
            <span asp-validation-for="FacultyName" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-sm" style="width:150px;">
                Submit
            </button>
        </div>
    </div>
</form>

