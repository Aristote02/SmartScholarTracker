@using StudentProgress.BusinessLogic.Profiles.Dtos
@model List<SpecialtyDto>


<h2 text-align:center>List of all Specialties</h2>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="" style="color:white;">List of specialties</h2>
		</div>

		@if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
		{
			<div class="col-6 text-end">
				<a class="btn btn-primary btn-sm" href="/Specialty/Add" role="button">
					<i class="bi bi-plus-circle"></i> Add new specialty
				</a>
			</div>
		}

	</div>

	<br /><br />

	<table class="table table-bordered table-striped table-dark" style="width:100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>SpecialtyName</th>
				@if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
				{
					<th></th>
				}

			</tr>
		</thead>
		<tbody>
			@foreach (var specialty in Model)
			{
				<tr>
					<td>@specialty.Id</td>
					<td>@specialty.SpecialtyName</td>

					@if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
					{
						<td>
							<a class="btn btn-primary btn-sm" href="/Specialty/Edit/@specialty.Id">Edit</a>
							<a class="btn btn-danger btn-sm" href="/Specialty/Delete/@specialty.Id">Delete</a>
						</td>
					}
				</tr>
			}
		</tbody>
	</table>
</div>