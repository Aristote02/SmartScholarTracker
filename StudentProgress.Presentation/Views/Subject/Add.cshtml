@model StudentProgress.BusinessLogic.Requests.SubjectRequest

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="text-align:center">Add new subject</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="SubjectName" class="form-control" />
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-sm" style="width:150px;">
                Add
            </button>
        </div>
    </div>
</form>

