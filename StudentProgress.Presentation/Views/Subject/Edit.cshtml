@using StudentProgress.BusinessLogic.Profiles.Dtos
@model SubjectDto

<form asp-action="Edit" method="post" enctype="multipart/form-data" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="text-align:center">Edit Subject</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="SubjectName">SubjectName</label>
            <input asp-for="SubjectName" class="form-control" placeholder="SubjectName">
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px;">Submit</button>
    </div>
</form>

