@using StudentProgress.BusinessLogic.Profiles.Dtos
@model List<SubjectDto>


<h2 text-align:center>List of All Subjects</h2>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="" style="color:white;">List of subjects</h2>
		</div>

		@if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
		{
			<div class="col-6 text-end">
				<a class="btn btn-primary btn-sm" href="/Subject/Add" role="button">
					<i class="bi bi-plus-circle"></i> Add new subject
				</a>
			</div>
		}	
	</div>

	<br /><br />

	<table class="table table-bordered table-striped table-dark" style="width:100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>SubjectName</th>
				@if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
				{
					<th></th>
				}				
			</tr>
		</thead>
		<tbody>
			@foreach (var subject in Model)
			{
				<tr>
					<td>@subject.Id</td>
					<td>@subject.SubjectName</td>
					@if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated && User.IsInRole("admin"))
					{
						<td>
							<a class="btn btn-primary btn-sm" href="/Subject/Edit/@subject.Id">Edit</a>
							<a class="btn btn-danger btn-sm" href="/Subject/Delete/@subject.Id">Delete</a>
						</td>
					}				
				</tr>
			}
		</tbody>
	</table>
</div>