@using StudentProgress.BusinessLogic.Requests;
@model UserLogin


<form asp-action="Login" method="post">
    <span class="text text-danger">@ViewData["Message"]</span>
    <!-- Email input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form2Example1">Email address</label>
        <input asp-for="Email" type="email" id="form2Example1" class="form-control" />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form2Example2">Password</label>
        <input asp-for="Password" type="password" id="form2Example2" class="form-control" />
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <label class="form-check-label" for="form2Example31"> Remember me </label>
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
            </div>
        </div>

    </div>

    <!-- Submit button -->
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-sm btn-block mb-4" style="width:100px;">
            Log in
        </button>
    </div>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a href="/User/Register">Register</a></p>
    </div>
</form>